<Window x:Class="SchemeEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scheme Editor" Height="350" Width="525"
        xmlns:v="clr-namespace:SchemeEditor.View">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Open Graphic Scheme"
                      Command="{Binding OpenBackgroundCommand}"/>
        </Menu>
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,10">
            <ToggleButton ToolTip="Select">Select</ToggleButton>
            <ToggleButton ToolTip="Draw walls">Wall</ToggleButton>
        </StackPanel>
        <v:Editor x:Name="editor"
                  BackgroundImage="{Binding BackgroundImage}"/>
    </DockPanel>
</Window>
