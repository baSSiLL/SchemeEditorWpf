<Window x:Class="SchemeEditor.View.RoomInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Properties"
        SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Vertical"
                Margin="10,0">
        <StackPanel Orientation="Horizontal"
                    Margin="0,10,0,0">
            <Label Content="Title" Width="50"/>
            <TextBox Name="title" Width="300"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Margin="0,10,0,0">            
            <Label Content="Color" Width="50"/>
            <Button Name="chooseColor"
                    Content="Choose..."
                    Click="ChooseColor_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="OK"
                    IsDefault="True"
                    Width="100"
                    Click="OK_Click"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Width="100"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
